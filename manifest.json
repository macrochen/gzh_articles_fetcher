{
  "manifest_version": 3,
  "name": "公众号文章抓取及对话",
  "version": "1.0",
  "description": "抓取公众号文章，并与文章内容进行对话",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "assets/icons/icon.png"
  },
  "options_page": "options/options.html",
  "commands": {
    "fetch-current-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "抓取当前页面内容"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["Readability.js", "utils.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
